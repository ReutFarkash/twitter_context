{
  "manifest_version": 3,
  "name": "Twitter Context Manager",
  "version": "1.0.0",
  "description": "Catalog and surface context for Twitter users in your Obsidian Vault.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://twitter.com/*", "https://x.com/*", "http://localhost:3000/*"],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
